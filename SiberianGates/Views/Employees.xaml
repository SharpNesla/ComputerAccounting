<Page x:Class="SiberianGates.Views.Employees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:views="clr-namespace:SiberianGates.Views"
      xmlns:layouts="clr-namespace:SiberianGates.Utils.Layouts"
      xmlns:grids="clr-namespace:SiberianGates.Utils.Controls.Grids"
      xmlns:controls="clr-namespace:SiberianGates.Utils.Controls"
      mc:Ignorable="d"
      Background="{StaticResource MaterialDesignPaper}"
      d:DesignHeight="450" d:DesignWidth="800">
    <Page.DataContext>
        <views:EmployeeDictionaryViewModel/>
    </Page.DataContext>
    <layouts:DictionaryLayout  DrawerButtonState="{Binding IsDrawerButtonChecked}"
                              Kind="Account" Title="Справочник работников" SearchHint="Поиск работников"
                              ApplyCommand="{Binding Path=NavigatePage}">
        <layouts:DictionaryLayout.ApplyCommandParameter>
            <views:EmployeeEditor></views:EmployeeEditor>
        </layouts:DictionaryLayout.ApplyCommandParameter>
        <controls:EmployeeGridView DataContext="{Binding EntityGrid}"></controls:EmployeeGridView>
    </layouts:DictionaryLayout>
</Page>